# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           				controllers.Application.index

# API access stuff
GET		/application/_API/getUser/:user/:email		controllers.Application.getUser(user : String, email : String)
POST	/application/_API/createUser/				controllers.Application.createUser
GET		/application/_API/getGame/:id				controllers.Application.getGame(id : Long)
POST	/application/_API/addFriend/:user/:friend	controllers.Application.addFriend(user : String, friend : String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.at(path="/public", file)
